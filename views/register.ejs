<head>
    <link rel="stylesheet" href="css/main.css">
</head>
<div class="wrapper">
    <div class="container">
        <h1>Register</h1>
        <form action="/register" method="POST" style="display: table;">
            <div style="display: table-row">
                <label for="name" style="display: table-cell">Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div style="display: table-row">
                <label for="email" style="display: table-cell">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div style="display: table-row">
                <label for="password" style="display: table-cell">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div style="display: table-row">
                <label for="submit" style="display: table-cell; width: 250px; "></label>
                <button type="submit " style="display: table-cell;">Register</button>
            </div>
        </form>

        <a href="/login ">Login</a>
    </div>
</div>